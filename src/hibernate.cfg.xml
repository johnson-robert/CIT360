<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/acme?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">iClient</property>
    <property name="hibernate.connection.password">1Silverado!</property>
    <mapping resource="hibernate/Reviews.hbm.xml"/>
    <mapping resource="hibernate/Clients.hbm.xml"/>
    <mapping resource="hibernate/Categories.hbm.xml"/>
    <mapping resource="hibernate/Images.hbm.xml"/>
    <mapping resource="hibernate/Inventory.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
